<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHomeGuest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="16dp"
        android:outlineSpotShadowColor="@color/blue_primary"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        android:clickable="true"
        android:focusable="true"
        android:clipToPadding="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clCardList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:background="?attr/selectableItemBackground">

            <RelativeLayout
                android:id="@+id/llFastApply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivCv"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_cv" />

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/ivCv"
                    android:fontFamily="@font/montserrat_regular"
                    android:paddingBottom="12dp"
                    android:text="@string/introguest"
                    android:textColor="@color/dark_black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvInstruction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvContent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/ivCv"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/instruction"
                    android:textColor="@color/black_grey"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <Button
                android:id="@+id/btnGetStarted"
                android:background="@drawable/bg_button_primary"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/getStated"
                app:layout_constraintTop_toBottomOf="@id/llFastApply" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
