<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ProfileFragment">

    <RelativeLayout
        android:id="@+id/rlPageTitle"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvProfileTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/profileTitle"
            android:textColor="@color/dark_black"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ivLogout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_logout" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/icon_upload_image"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/blue_primary"/>

        <TextView
            android:id="@+id/tvPickImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivProfile"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="@string/uploadPhoto"
            android:textColor="@color/dark_black"
            android:textSize="12sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/aboutYou"
                android:textColor="@color/dark_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/hintBio"
                app:boxStrokeColor="@color/grey"
                app:boxStrokeWidth="1dp"
                app:hintTextAppearance="?textAppearanceCaption"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tfBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:textColor="@color/dark_black"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/personalInfo"
                android:textColor="@color/dark_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:boxStrokeColor="@color/grey"
                app:boxStrokeWidth="1dp"
                android:requiresFadingEdge="vertical"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tfFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fullName"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColor="@color/dark_black"
                    android:textSize="12sp"
                    android:textStyle="normal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:boxStrokeColor="@color/grey"
                app:boxStrokeWidth="1dp"
                app:hintTextAppearance="?textAppearanceCaption">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tfEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hintEmail"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/dark_black"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:enabled="false"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/hintPhone"
                android:textAlignment="center"
                app:boxStrokeColor="@color/grey"
                app:boxStrokeWidth="1dp"
                app:hintTextAppearance="?textAppearanceCaption"
                app:prefixTextAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tfPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="13"
                    android:padding="10dp"
                    android:textColor="@color/dark_black"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/hintBirth"
                app:boxStrokeColor="@color/grey"
                app:boxStrokeWidth="1dp"
                app:hintTextAppearance="?textAppearanceCaption">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_date"
                    android:padding="10dp"
                    android:inputType="none"
                    android:textColor="@color/dark_black"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:focusable="false"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/hintAddress"
                app:boxStrokeColor="@color/grey"
                app:boxStrokeWidth="1dp"
                app:hintTextAppearance="?textAppearanceCaption"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tfAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColor="@color/dark_black"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/education"
                android:textColor="@color/dark_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="@string/hintDegree"
                app:boxStrokeColor="@color/grey"
                app:boxStrokeWidth="1dp"
                app:hintTextAppearance="?textAppearanceCaption"
                app:endIconMode="clear_text"
                app:endIconTint="@color/blue_primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tfDegree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:padding="10dp"
                    android:textColor="@color/dark_black"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/cv"
                android:textColor="@color/dark_black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tfCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edit_text_border"
                android:drawableEnd="@drawable/ic_file"
                android:editable="false"
                android:fontFamily="sans-serif-light"
                android:hint="resume.pdf"
                android:padding="10dp"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_button"
                android:fontFamily="sans-serif-black"
                android:text="Save"
                android:textAllCaps="false"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>