<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_view"
    tools:context=".fragment.CheckEmailDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="24dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="@string/checkEmailTitle"
            android:textColor="@color/dark_black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_light"
            android:text="@string/checkEmailMessage"
            android:textAlignment="center"
            android:textColor="@color/dark_black"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_btn_secondary"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textColor="@color/medium_blue"
            android:textSize="16sp"
            app:rippleColor="@color/medium_blue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/checkEmailInstruction"
            android:textAlignment="center"
            android:textColor="@color/dark_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvTryAnotherAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/checkEmailInstruction1"
            android:textAlignment="center"
            android:textColor="@color/medium_blue"
            android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>